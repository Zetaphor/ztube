<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ZTube - YouTube Client</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
  <nav class="bg-red-600 text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">ZTube</h1>
      <div class="flex-1 mx-8">
        <div class="relative">
          <input type="text" id="searchInput" class="w-full px-4 py-2 rounded-full text-gray-800 focus:outline-none"
            placeholder="Search videos...">
          <button id="searchButton" class="absolute right-0 top-0 mt-2 mr-4 text-gray-600">
            <i class="fas fa-search"></i>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <main class="container mx-auto p-4">
    <div id="content" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <!-- Content will be dynamically loaded here -->
    </div>

    <div id="videoPlayer"
      class="hidden fixed top-0 left-0 w-full h-full bg-black bg-opacity-90 flex items-start justify-center z-50 overflow-y-auto py-8">
      <div class="relative w-full max-w-4xl mx-auto">
        <button id="closePlayer" class="absolute -top-10 right-4 text-white text-2xl">
          <i class="fas fa-times"></i>
        </button>
        <div class="bg-black rounded-t-lg overflow-hidden">
          <video id="player" controls class="w-full aspect-video">
            Your browser does not support the video tag.
          </video>
        </div>
        <div id="videoInfo" class="bg-white p-6 rounded-b-lg">
          <div class="flex justify-between items-center mb-4">
            <h2 id="videoTitle" class="text-xl font-bold flex-1 mr-4"></h2>
            <select id="qualitySelect" class="bg-gray-100 border border-gray-300 rounded-md px-3 py-1">
              <option value="best">Best Quality</option>
              <option value="1080p">1080p</option>
              <option value="720p">720p</option>
              <option value="audio">Audio Only</option>
            </select>
          </div>
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <img id="channelAvatar" class="w-12 h-12 rounded-full mr-3" src="" alt="">
              <div>
                <a id="channelName" href="#" class="font-medium text-lg hover:text-red-600"></a>
                <p id="subscriberCount" class="text-gray-600 text-sm"></p>
              </div>
            </div>
            <div class="text-right">
              <div id="viewCount" class="font-medium"></div>
              <div id="uploadDate" class="text-gray-600"></div>
            </div>
          </div>
          <div id="videoDescription"
            class="text-gray-700 whitespace-pre-wrap mb-8 border-t border-b border-gray-200 py-4 max-h-48 overflow-y-auto">
          </div>

          <!-- Comments Section -->
          <div id="commentsSection" class="mt-6">
            <h3 class="text-lg font-semibold mb-4">Comments</h3>
            <div id="commentsList" class="space-y-4 max-h-[400px] overflow-y-auto pr-2">
              <!-- Comments will be dynamically loaded here -->
            </div>
            <button id="loadMoreComments" class="mt-4 text-red-600 hover:text-red-700 font-medium hidden">
              Load More Comments
            </button>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script src="/js/app.js"></script>
</body>

</html>