<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Dynamically set title -->
  <title>ZTube - Playlist</title>
  <script src="https://cdn.tailwindcss.com/3.4.3"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <!-- Add dragula for drag-and-drop ordering? Maybe later -->
</head>

<body class="bg-zinc-900 text-zinc-100">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <aside id="sidebar"
      class="w-16 bg-zinc-800 text-zinc-100 px-4 pt-0 fixed inset-y-0 left-0 z-40 overflow-y-auto flex flex-col items-center">
      <ul class="flex flex-col items-center space-y-4 mt-4">
        <li class="mb-2"><a href="/" class="hover:text-green-400 text-2xl"><i class="fas fa-bookmark"></i></a></li>
        <li class="mb-2"><a href="#" class="hover:text-green-400 text-2xl"><i class="fas fa-history"></i></a></li>
        <li class="mb-2"><a href="/playlists" class="hover:text-green-400 text-2xl text-green-500"><i
              class="fas fa-list-ul"></i></a></li> <!-- Active -->
        <li class="mb-2"><a href="#" class="hover:text-green-400 text-2xl"><i class="fas fa-user"></i></a></li>
        <li class="mb-2"><a href="#" class="hover:text-green-400 text-2xl"><i class="fas fa-cog"></i></a></li>
      </ul>
    </aside>

    <!-- Main Content Area -->
    <div id="main-content" class="flex-1 flex flex-col ml-16">
      <!-- Nav Bar (Consider EJS include) -->
      <nav class="bg-green-600 text-white p-4 sticky top-0 z-50 w-full">
        <div class="container mx-auto flex justify-between items-center">
          <h1 class="text-2xl font-bold">ZTube</h1>
          <div class="flex-1 mx-8">
            <div class="relative">
              <input type="text" id="searchInput"
                class="w-full px-4 py-2 rounded-full bg-zinc-700 text-zinc-100 focus:outline-none"
                placeholder="Search videos...">
              <button id="searchButton" class="absolute right-0 top-0 mt-2 mr-4 text-zinc-400">
                <i class="fas fa-search"></i>
              </button>
            </div>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="container mx-auto p-4 flex-grow">
        <div id="loadingIndicator" class="text-center py-4 hidden"><i class="fas fa-spinner fa-spin mr-2"></i>Loading...
        </div>
        <div id="errorDisplay" class="text-red-500 text-center py-2 hidden"></div>

        <div id="playlistDetailContainer" class="hidden">
          <h2 id="playlistName" class="text-2xl font-semibold mb-2 text-zinc-100"></h2>
          <p id="playlistDescription" class="text-zinc-400 mb-4"></p>
          <p id="videoCount" class="text-sm text-zinc-500 mb-4"></p>

          <!-- Sorting Options -->
          <div class="mb-4 flex items-center justify-end space-x-2">
            <label for="sortOptions" class="text-sm text-zinc-400">Sort by:</label>
            <select id="sortOptions"
              class="bg-zinc-700 text-zinc-100 rounded px-2 py-1 text-sm focus:outline-none focus:ring-1 focus:ring-green-500">
              <option value="default">Default (Saved Order)</option>
              <option value="added_desc">Date Added (Newest)</option>
              <option value="added_asc">Date Added (Oldest)</option>
              <option value="title_asc">Title (A-Z)</option>
              <option value="title_desc">Title (Z-A)</option>
              <option value="channel_asc">Channel (A-Z)</option>
              <option value="channel_desc">Channel (Z-A)</option>
            </select>
          </div>

          <!-- Playlist Video List -->
          <div id="playlistVideoList" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <!-- Video cards will be loaded here by JS -->
          </div>
        </div>
      </main>

      <!-- Include the shared video player partial -->
      <%- include('partials/videoPlayer') %>

    </div>
  </div>

  <!-- Hidden input to pass playlist ID from server to client JS -->
  <input type="hidden" id="playlistId" value="<%= playlistId %>">

  <!-- Load general app logic first (for player setup, search) -->
  <script src="https://www.youtube.com/iframe_api"></script>
  <script src="/js/app.js" type="module"></script>
  <!-- Then load specific logic for this page -->
  <script src="/js/playlistDetail.js" type="module"></script>
</body>

</html>