<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Settings - ZTube</title>
  <script src="https://cdn.tailwindcss.com/3.4.3"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>

<body class="bg-zinc-900 text-zinc-100">
  <div class="flex h-screen">
    <!-- Sidebar -->
    <%- include('partials/sidebar', { activePage: 'settings' }) %>

      <!-- Main Content Area -->
      <div id="main-content" class="flex-1 flex flex-col ml-16">
        <nav class="bg-green-600 text-white p-2 sticky top-0 z-50 w-full">
          <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold text-zinc-800">ZTube</h1>
            <%- include('partials/navbarSearch') %>
          </div>
        </nav>

        <main class="container mx-auto p-4 flex-grow overflow-y-auto">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-3xl font-bold mb-6">Settings</h2>

            <!-- Blocked Channels Section -->
            <div class="bg-zinc-800 rounded-lg shadow-lg p-6 mb-6">
              <h3 class="text-xl font-semibold mb-4 flex items-center">
                <i class="fas fa-ban text-red-500 mr-2"></i>
                Blocked Channels
              </h3>
              <p class="text-zinc-400 mb-4">Channels you've blocked will not appear in your feeds, search results, or
                recommendations.</p>

              <div id="blockedChannelsList" class="max-h-96 overflow-y-auto border border-zinc-700 rounded-lg">
                <div id="noBlockedChannels" class="text-zinc-500 italic p-4 text-center">
                  No blocked channels
                </div>
              </div>
            </div>

            <!-- General Settings Section -->
            <div class="bg-zinc-800 rounded-lg shadow-lg p-6">
              <h3 class="text-xl font-semibold mb-4 flex items-center">
                <i class="fas fa-cog text-blue-500 mr-2"></i>
                General Settings
              </h3>

              <div class="space-y-4">
                <p class="text-zinc-400 text-sm">General settings for the application will appear here as they are
                  implemented.</p>
              </div>
            </div>
          </div>
        </main>
      </div>
  </div>

  <script type="module" src="/js/settings.js"></script>
</body>

</html>